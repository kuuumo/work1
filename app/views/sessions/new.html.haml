%h1 Sessions#new
.form
  = form_for(:session, url: sessions_path) do |f|
    .mt10
    = f.label :email
    = f.email_field :email

    .mt10
    = f.label :password
    = f.password_field :password

    .mt10
    = f.submit "Log in"

.sign_up
  %p New user?
  = link_to "Sign up now!", new_user_path
