-provide(:title, "Log in")

.login
  %h1 ログイン画面
  .form
    = form_for(:session, url: sessions_path) do |f|
      %div
        = f.label :email
        = f.email_field :email, class: 'input-field'

      %div
        = f.label :password
        = f.password_field :password, class: 'input-field'

      %div
        = f.submit "ログイン", class: 'next-button'

  .sign_up
    %p ユーザー登録がまだお済みでない方は
    = link_to "こちら", new_user_path
